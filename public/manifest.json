{
  "manifest_version": 3,
  "name": "Promtlens",
  "version": "1.0.0",
  "description": "Save and manage your AI prompts for ChatGPT, Claude, and Gemini",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_title": "AI Prompt Manager"
  },
  "icons": {
    "128": "icons/promtlens.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
      ],
      "js": ["content.js", "injectSavePromptButton.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
